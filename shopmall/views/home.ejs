<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
        crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Bootstrap Theme</title>
    <script>
        function addproducts() {
            document.getElementById("addproducts").submit();
        }
        function addstore() {
            document.getElementById("addstore").submit();
        }
        function addcostomer() {
            document.getElementById("addcostomer").submit();
        }


    </script>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
        <div class="container">
            <a href="/" class="navbar-brand">Shopmall</a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item px-2">
                        <a href="/" class="nav-link active">Home</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/store" class="nav-link">商店</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/products" class="nav-link">商品</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/costomer" class="nav-link">客戶</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="#" class="nav-link">anything</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown mr-3">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-user"></i> Welcome to Shopmall
                        </a>
                        <div class="dropdown-menu">
                            <a href="/user/profile" class="dropdown-item">
                                <i class="fas fa-user-circle"></i> Profile
                            </a>
                            <a href="/user/setting" class="dropdown-item">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="/user/logout" class="nav-link">
                            <i class="fas fa-user-times"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- HEADER -->
    <header id="main-header" class="py-2 bg-primary text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        <i class="fas fa-cog"></i> 首頁</h1>
                </div>
            </div>
        </div>
    </header>

    <section id="actions" class="py-4 mb-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <a href="/store/add" class="btn btn-primary btn-block" data-toggle="modal" data-target="#addStoreModal">
                        <i class="fas fa-plus"></i> Add Store
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/products/add" class="btn btn-success btn-block" data-toggle="modal" data-target="#addProductsModal">
                        <i class="fas fa-plus"></i> Add Products
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/costomer/add" class="btn btn-warning btn-block" data-toggle="modal" data-target="#addCostomerModal">
                        <i class="fas fa-plus"></i> Add costomer
                    </a>
                </div>
            </div>
        </div>
    </section>



    <section id="posts" class="mt-2">
        <div class="container">
            <div class="row">
                <div class="col-md-9">

                </div>
                <div class="col-md-3">
                    <div class="card text-center bg-primary text-white mb-3">
                        <div class="card-body">
                            <h3>Products</h3>
                            <h4 class="display-4">
                                <i class="fas fa-pencil-alt"></i>
                                <%= productsCount %>
                            </h4>
                            <a href="/products" class="btn btn-outline-light btn-sm">View</a>
                        </div>
                    </div>

                    <div class="card text-center bg-success text-white mb-3">
                        <div class="card-body">
                            <h3>Shops</h3>
                            <h4 class="display-4">
                                <i class="fas fa-folder"></i>
                                <%= storeCount %>
                            </h4>
                            <a href="/store" class="btn btn-outline-light btn-sm">View</a>
                        </div>
                    </div>

                    <div class="card text-center bg-warning text-white mb-3">
                        <div class="card-body">
                            <h3>costomer</h3>
                            <h4 class="display-4">
                                <i class="fas fa-users"></i>
                                <%= costomerCount %>
                            </h4>
                            <a href="/costomer" class="btn btn-outline-light btn-sm">View</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ADD CATEGORY MODAL -->
    <div class="modal fade" id="addStoreModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add Store</h5>
                    <button class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addstore" action="/store/add" method="post">
                        <div class="form-group">
                            <label for="商店名稱">商店名稱</label>
                            <input name="sname" type="text" class="form-control" value="">
                        </div>
                        <div class="form-group">
                            <label for="店家地址">店家地址</label>
                            <input name="saddress" type="text" class="form-control" value="">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success" data-dismiss="modal" onclick="addstore()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD USER MODAL -->
    <div class="modal fade" id="addCostomerModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">Add costomer</h5>
                    <button class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addcostomer" action="/costomer/add" method="post">
                        <div class="form-group">
                            <label for="客戶名稱">客戶名稱</label>
                            <input name="cname" type="text" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="連絡電話">連絡電話</label>
                            <input name="phone" type="phone" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="地址">地址</label>
                            <input name="address" type="text" class="form-control">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" data-dismiss="modal" onclick="addcostomer()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addProductsModal">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Add Products</h5>
                    <button class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addproducts" action="/products/add" method="post">
                        <div class="form-group">
                            <label for="商品編號">商品編號</label>
                            <input type="text" name="pid" class="form-control" value="" placeholder="商品編號">
                        </div>
                        <div class="form-group">
                            <label for="商品名稱">商品名稱</label>
                            <input name="pname" type="text" id="pname" class="form-control" value="">
                        </div>
                        <div class="form-group">
                            <label for="價格">價格</label>
                            <input name="price" type="text" id="price" class="form-control" value="">
                        </div>
                        <div class="form-group">
                            <label for="存貨">存貨</label>
                            <input name="amount" type="text" id="amount" class="form-control" value="">
                        </div>
                        <div class="form-group">
                            <label for="商家名稱">商家名稱</label>
                            <select class="form-control" name="sname">
                                <% 
                  for ( var i = 0 ; i < store.length ; i++){ 
                    var selected = ( i==0 ) ? "selected" : "";
                %>
                                <option value="<%= store[i].sname %>" <%=selected %>>
                                    <%= store[i].sname %>
                                </option>
                                <% } %>
                            </select>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal" onclick="addproducts()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy;
                        <span id="year"></span>
                        Blogen
                    </p>
                </div>
            </div>
        </div>
    </footer>


    <!-- MODALS -->




    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
        crossorigin="anonymous"></script>
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/locale/af.js"></script>
    <script>
        // Get the current year for the copyright
        $('#year').text(new Date().getFullYear());

        CKEDITOR.replace('editor1');
    </script>
</body>

</html>